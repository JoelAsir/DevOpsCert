pipeline {
    agent any
    tools {
        maven 'mvn_home'
    }
    stages {
        stage('SCM-Checkout') {
            steps {
                 git credentialsId: 'git-credentials', url: 'https://github.com/JoelAsir/DevOpsCert.git'
            }
        }  
        stage('Maven-build') {
            steps {
                sh 'mvn build'
            }
        }
        stage('Maven-deploy') {
            steps {
                sh 'mvn deploy'
            }
        }
    }
}
