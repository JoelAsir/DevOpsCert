pipeline {
    agent any
    tools {
        maven 'mvn_home'
    }
    stages {
        stage('SCM-Checkout') {
            steps {
                git branch: 'master', git credentialsId: 'git-credentials', url: 'https://github.com/JoelAsir/DevOpsCert.git'
            }
        }  
        stage('Maven-clean') {
            steps {
                mvn clean
            }
        }  
        stage('Maven-build') {
            steps {
                mvn build
            }
        }
        stage('Maven-deploy') {
            steps {
                mvn deploy
            }
        }
    }
}
